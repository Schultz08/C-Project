@model Models.Search.SearchFilter

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background-color: #2e2e2d;
        color: #28a745;
        padding: 0;
    }

    .form-horizontal {
        margin-top: 3rem;
        margin-bottom: 5rem;
        background-color: #1c1c1b;
        border-radius: 10px;
        border: .2rem ridge black;
    }

    label {
        color: #29b348;
    }

    .footerLink {
        padding-bottom: 1rem;
        margin-left: 1rem;
    }

    .btn-outline-success {
        width: 5rem;
    }

    h4 {
        margin-top: 1rem;
        margin-left: 1rem;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SearchFilter</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SearchProfile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.SearchProfile)
                    @Html.ValidationMessageFor(model => model.SearchProfile, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SearchCategory, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.SearchCategory)
                    @Html.ValidationMessageFor(model => model.SearchCategory, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SearchCodeExample, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.SearchCodeExample)
                    @Html.ValidationMessageFor(model => model.SearchCodeExample, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SearchRequest, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SearchRequest, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SearchRequest, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search!" class="btn btn-outline-success" />
            </div>
        </div>
        <div>
            @Html.ActionLink("Back to List", "Index", routeValues: null, htmlAttributes: new { @class = "nav-link"})
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
