@model IEnumerable<Models.CategoryModels.CategoryDetail>

@{
    ViewBag.Title = "Category";
}

<h2>All Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div>
    @using (Html.BeginForm("DefualtSearch", "Search"))
    {
        <ul class="nav navbar-nav">
            <li>
                <input type="text" name="searchString" />
                <input type="submit" value="Search" />
            </li>
            <li>@Html.ActionLink("Advance Search", "Index", "Search")</li>
        </ul>
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryDiscription)
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryName)
    </td>
    <td>
        @try
        {
            @item.CategoryDiscription.Substring(0, 10)
        }
        catch
        {
        @Html.DisplayFor(modelItem => item.CategoryDiscription)

        }



    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) |
        @Html.ActionLink("Details", "Detail", new { id = item.CategoryId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })
    </td>
</tr>
    }

</table>


@if (TempData.ContainsKey("SaveResult"))
{

    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
